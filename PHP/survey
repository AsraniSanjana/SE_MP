 <script>
    function checkboxes()
{ var str="you have";
 var inputElems = document.getElementsByTagName("input"),
  count = 0;

  for (var i=0; i<inputElems.length; i++) {       
     if (inputElems[i].type == "checkbox" && inputElems[i].checked == true){
        count++;
     }
  }
  alert("you have " + count + " symptoms!");
  if(count>=6)
  alert("You might be positive, You should Get tested!!");
 else if(count>=4)
  alert(" Visit a doctor soon!");
  else if(count<4)
  alert("You may not be positive , but still take pre-cautionary measures!");

  
  
}

 </script>
